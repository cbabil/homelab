# =============================================================================
# Tomo Frontend Configuration
# =============================================================================
# Copy this file to .env and customize for your environment
# cp .env-default .env

# =============================================================================
# Application Branding
# =============================================================================

# Application name (used in copyright footer and branding)
VITE_APP_NAME=Tomo

# =============================================================================
# Backend Connection
# =============================================================================

# MCP Server URL (backend connection)
# For development: http://localhost:8000/mcp
# For production: /mcp (relative to frontend origin)
VITE_MCP_SERVER_URL=/mcp

# =============================================================================
# Feature Flags
# =============================================================================
# These must match the backend feature flags for consistency
# Set to "true" or "false" to enable/disable features

# Core Features
VITE_FEATURE_SERVERS=true
VITE_FEATURE_APPLICATIONS=true
VITE_FEATURE_MARKETPLACE=true

# Operations
VITE_FEATURE_MONITORING=true
VITE_FEATURE_DASHBOARD=true

# Data Management
VITE_FEATURE_BACKUP=true
VITE_FEATURE_DATA_RETENTION=true

# UI Pages
VITE_FEATURE_SERVERS_PAGE=true
VITE_FEATURE_APPLICATIONS_PAGE=true
VITE_FEATURE_MARKETPLACE_PAGE=true
VITE_FEATURE_DASHBOARD_PAGE=true
VITE_FEATURE_LOGS_PAGE=true
VITE_FEATURE_SETTINGS_PAGE=true

# =============================================================================
# Development Settings
# =============================================================================

# Enable mock data for development (when backend is unavailable)
VITE_USE_MOCK_DATA=false

# Enable debug logging in console
VITE_DEBUG_MODE=false
