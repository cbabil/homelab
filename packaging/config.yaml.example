# Tomo Configuration
# Location: /etc/tomo/config.yaml
#
# This file is read on service startup. After making changes,
# restart the service: systemctl restart tomo

# Server settings
server:
  # Backend listens on localhost only (nginx proxies requests)
  host: 127.0.0.1
  port: 8000

# Database configuration
database:
  # SQLite database path
  path: /var/lib/tomo/tomo.db

# Logging configuration
logging:
  # Log level: DEBUG, INFO, WARNING, ERROR
  level: INFO
  # Log format: json or text
  format: json
  # Log file path
  file: /var/log/tomo/app.log
  # Maximum log file size (MB) before rotation
  max_size_mb: 100
  # Number of backup log files to keep
  backup_count: 5

# Security settings
security:
  # Session timeout in minutes (0 = no timeout)
  session_timeout_minutes: 60
  # Maximum failed login attempts before lockout
  max_login_attempts: 5
  # Lockout duration in minutes
  lockout_duration_minutes: 15
  # JWT token expiry in hours
  jwt_expiry_hours: 24

# Metrics collection
metrics:
  # Enable/disable metrics collection
  enabled: true
  # Collection interval in seconds
  collection_interval_seconds: 300
  # Data retention in days
  retention_days: 30

# Application catalog
catalog:
  # Built-in catalog location
  builtin_path: /opt/tomo/data/catalog
  # Custom catalog location (user-defined apps)
  custom_path: /var/lib/tomo/catalog

# Backup settings
backup:
  # Default backup location
  default_path: /var/lib/tomo/backups
  # Include in backup: servers, apps, settings, logs
  include:
    - servers
    - apps
    - settings
