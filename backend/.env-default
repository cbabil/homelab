# =============================================================================
# Tomo Backend Configuration
# =============================================================================
# Copy this file to .env and customize for your environment
# cp .env-default .env

# =============================================================================
# Core Settings
# =============================================================================

# Application environment (development, staging, production)
APP_ENV=production

# Application version (used for display, updates check)
APP_VERSION=1.0.0

# Data directory for database and storage
DATA_DIRECTORY=data

# JWT secret key for authentication tokens
# REQUIRED: Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=

# =============================================================================
# Connection Settings
# =============================================================================

# SSH connection timeout in seconds
SSH_TIMEOUT=30

# Maximum concurrent SSH connections
MAX_CONCURRENT_CONNECTIONS=10

# CORS allowed origins (comma-separated)
# Default allows localhost development ports
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003

# =============================================================================
# Feature Flags - Core Features
# =============================================================================
# Set to "true" or "false" to enable/disable features

# Server Management
FEATURE_SERVERS=true
FEATURE_SERVER_METRICS=true
FEATURE_SERVER_PREPARATION=true

# Application Management
FEATURE_APPLICATIONS=true
FEATURE_APP_DEPLOYMENT=true
FEATURE_APP_MANAGEMENT=true

# Marketplace
FEATURE_MARKETPLACE=true
FEATURE_CASAOS_STORE=true
FEATURE_CUSTOM_MARKETPLACES=true

# =============================================================================
# Feature Flags - Operations
# =============================================================================

# Docker Integration
FEATURE_DOCKER_TOOLS=true
FEATURE_DOCKER_INSTALL=true
FEATURE_DOCKER_COMPOSE=true

# Monitoring & Metrics
FEATURE_MONITORING=true
FEATURE_SYSTEM_METRICS=true
FEATURE_CONTAINER_METRICS=true
FEATURE_DASHBOARD=true

# Logging & Audit
FEATURE_ACTIVITY_LOGGING=true
FEATURE_AUDIT_LOGGING=true
FEATURE_LOGS_PAGE=true

# =============================================================================
# Feature Flags - Data Management
# =============================================================================

# Backup & Restore
FEATURE_BACKUP=true
FEATURE_BACKUP_ENCRYPTION=true
FEATURE_RESTORE=true

# Data Retention
FEATURE_DATA_RETENTION=true
FEATURE_AUTO_CLEANUP=true

# =============================================================================
# Feature Flags - Security
# =============================================================================

# Authentication
FEATURE_USER_REGISTRATION=true
FEATURE_SESSION_MANAGEMENT=true
FEATURE_JWT_AUTH=true

# Security Policies
FEATURE_STRICT_SSH=false
FEATURE_CREDENTIAL_ENCRYPTION=true

# =============================================================================
# Feature Flags - UI Pages (Frontend)
# =============================================================================
FEATURE_SERVERS_PAGE=true
FEATURE_APPLICATIONS_PAGE=true
FEATURE_MARKETPLACE_PAGE=true
FEATURE_DASHBOARD_PAGE=true
FEATURE_LOGS_PAGE=true
FEATURE_SETTINGS_PAGE=true

# =============================================================================
# TLS / SSL Settings
# =============================================================================
# Optional: provide paths to enable direct TLS on uvicorn.
# For most deployments, use a reverse proxy (nginx, caddy) instead.
# SSL_CERTFILE=/path/to/cert.pem
# SSL_KEYFILE=/path/to/key.pem

# =============================================================================
# Development Settings (only for APP_ENV=development)
# =============================================================================

# Enable debug mode (verbose logging)
DEBUG_MODE=false

# Tool modules directory
TOOLS_DIRECTORY=src/tools
TOOLS_PACKAGE=tools
